<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= blog.created_at.strftime('%B %d, %Y') %></p>

  <%= render partial: 'blogs/admin_actions', locals: { blog: blog } %>

  <%= markdown blog.body %>
</div><!-- /.blog-post -->
