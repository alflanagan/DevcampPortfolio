<div class="blog-post">
  <h2 class="blog-post-title"><%= blog.title.upcase %></h2>
  <p class="blog-post-meta"><%= distance_of_time_in_words blog.created_at, Time.now %> ago</p>
  <%= blog.body %>
  <nav class="nav">
    <%= link_to(blog.status,
                toggle_status_blog_path(blog),
                class: "nav-link") if logged_in?(:site_admin) %>
    <%= link_to('Show',
                blog,
                class: 'nav-link') %>
    <%= link_to('Edit',
                edit_blog_path(blog),
                class: 'nav-link') if logged_in?(:site_admin) %>
    <%= link_to('Destroy',
                blog,
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'nav-link') if logged_in?(:site_admin) %>
  </nav>
</div><!-- /.blog-post -->
