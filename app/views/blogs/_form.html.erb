<script>
// probably can do this with coffeescript...

$.when($.ready).then(function (e) {
  $('#status-button').on('click', toggle_status_button)
})
</script>

<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alerts error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title,
                        class: 'form-control',
                        placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <button id="status-button"
            type="button"
            name="button[status]"
            class="btn btn-outline-primary">
    Draft
    </button>
  </div>

  <div class="form-group">
    <%= form.text_area :body,
                       class: 'form-control',
                       rows: 15,
                       placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <!-- Need to replace this with bootstrap dropdown, browser <select> pretty lame -->
    <%= form.collection_select :topic_id,
                               Topic.order(:title),
                               :id,
                               :title,
                               {prompt: true},
                               {style: 'min-width: 150px;'} %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary', id: 'submit-button' %>
  </div>
<% end %>
