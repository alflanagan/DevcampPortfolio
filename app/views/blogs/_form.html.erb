<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "A Lloyd Flanagan Blog") %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title,
                        class: 'form-control',
                        placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body,
                       class: 'form-control',
                       rows: 15,
                       placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <!-- Need to replace this with bootstrap dropdown, browser <select> pretty lame -->
    <%= form.collection_select :topic_id,
                               Topic.order(:title),
                               :id,
                               :title,
                               {prompt: true},
                               {style: 'min-width: 150px;'} %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
