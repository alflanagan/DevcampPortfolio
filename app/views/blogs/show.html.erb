<div class="container">
  <% if logged_in? :site_admin %>
    <div class="row mb-3">
      <div class="col">
          <%= link_to 'Write a New Blog', new_blog_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
    <div class="row">
      <div class="col-md-8">
        <div>
          Topic: <%= link_to @blog.topic.title, topic_path(@blog.topic.id) %>
        </div>
        <h1><%= @blog.title %>
          <% if logged_in?(:site_admin) %>
            <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-primary ml-3" %>
          <% end %>
        </h1>
        <p><%= @blog.created_at.strftime '%B %d, %Y' %> (Updated <%= @blog.updated_at.strftime '%B %d, %Y' %>)</p>
        <div class="card p-2">
          <div id="blog_body"></div>
        </div>
        <hr>
        <h3>Comments</h3>
        <div class="card" style="padding: 2rem; margin-top: 40px;">
          <!-- comment form -->
          <%= render 'comments/comment_form' %>

          <div id="comments" data-blog-id="<%= @blog.id %>">
            <%= render @blog.comments %>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <a href="#" class="btn btn-secondary">Back to top</a>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <%= render 'shared/blog_sidebar', locals: {topic_list: @topic_list} %>
      </div>
    </div>
  </div>
</div>
<script>
  (function () {
    "use strict"
    const raw_md = <%= make_js_template @blog.body %>
    Blogs.render_md(raw_md, '#blog_body')
  })()
</script>
