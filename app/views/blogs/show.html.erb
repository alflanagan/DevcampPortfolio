<% if logged_in? :site_admin %>
  <div class="row mb-3">
    <div class="col">
        <%= link_to 'Write a New Blog', new_blog_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="col-md-8">
    <h1><%= @blog.title %>
      <% if logged_in?(:site_admin) %>
        <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-primary ml-3" %>
      <% end %>
    </h1>
    <p><%= @blog.created_at.strftime '%B %d, %Y' %> (Updated <%= @blog.updated_at.strftime '%B %d, %Y' %>)</p>
    <p>
      <%= @blog.body %>
    </p>
    <!-- comment form -->
    <% unless current_user.is_a? GuestUser %>
      <%= form_for @comment, url: '#' do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>

        <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
      <% end %>
    <% end %>

    <%= render @blog.comments %>

    <div class="row">
      <div class="col">
        <a href="#" class="btn btn-secondary">Back to top</a>
      </div>
    </div>
  </div>
  <%= render 'shared/blog_sidebar' %>
</div>
