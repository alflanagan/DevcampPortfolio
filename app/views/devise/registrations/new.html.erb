<div class="card">
  <div class="card-body">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email,
                              autofocus: true,
                              autocomplete: "email",
                              class: "form-control",
                              "aria-described-by": "emailHelp" %>
            <small id="emailHelp" class="form-text text-muted">
              This will be your user ID for login.
            </small>
          </div>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: "form-control", "aria-described-by": "nameHelp" %>
            <small id="nameHelp" class="form-text text-muted">
              This is the name displayed on your comments.
            </small>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <%= f.password_field :password,
                                   autocomplete: "new-password",
                                   class: "form-control",
                                   "aria-described-by": "passwordMinimumHelp" %>
              <small id="passwordMinmumHelp" class="form-text text-muted">
                <%= @minimum_password_length %> characters minimum
              </small>
            <% else %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-10"></div>
        <div class="col-md-2">
          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
        <div class="auth-links register-text">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
