<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= render 'application/favicon' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <div id="background"></div>
      <!-- <%%= video_tag(
        'HardDrivePhotojpeg.mp4',
        id: 'background',
        autoplay: true,
        loop: true,
        muted: true,
        poster: 'david-moum-nbqlWhOVu6k-unsplash.jpg'
      )
      %> -->
      <%= render 'shared/application_nav', location: 'top' %>

      <%= yield %>

      <%= render 'shared/application_footer' %>

      <%= alerts %>
    </div>
  </body>
</html>
