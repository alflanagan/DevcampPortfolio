<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <div class="card-body">
      <%= image_tag portfolio_img(portfolio_item.thumb_image), width: '100%' %>
    </div>
    <div class="card-header">
      <h3><%= link_to portfolio_item.title,
                      portfolio_show_path(portfolio_item) %></h3>
      <p><%= portfolio_item.subtitle %></p>
    </div>
  </div>
</div>
