<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image), width: '100%' %>
    </div>
    <div class="col">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>
      <hr>
      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% if logged_in?(:site_admin) %>
      <div class="col-md-12">
        <%= link_to "Edit Item",
                    edit_portfolio_path(@portfolio_item),
                    class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>
